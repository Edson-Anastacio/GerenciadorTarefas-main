<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.geometry.*?>

<VBox xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.projeto.controller.TaskDialogController"
      spacing="10" style="-fx-padding:15;" alignment="TOP_LEFT">

    <Label text="Tarefa" style="-fx-font-size:16; -fx-font-weight:bold;"/>
    <GridPane hgap="8" vgap="8">
        <Label text="Título:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
        <TextField fx:id="tfTitulo" GridPane.rowIndex="0" GridPane.columnIndex="1" prefWidth="350"/>
        <Label text="Prioridade:" GridPane.rowIndex="1" GridPane.columnIndex="0" />
        <ComboBox fx:id="cbPrioridade" GridPane.rowIndex="1" GridPane.columnIndex="1" prefWidth="150"/>
        <Label text="Descrição:" GridPane.rowIndex="2" GridPane.columnIndex="0" />
        <TextArea fx:id="taDescricao" GridPane.rowIndex="2" GridPane.columnIndex="1" prefRowCount="6" prefWidth="350"/>
    </GridPane>

    <HBox spacing="10" alignment="CENTER_RIGHT">
        <Button fx:id="btnSalvar" text="Salvar" onAction="#onSalvar"/>
        <Button fx:id="btnCancelar" text="Cancelar" onAction="#onCancelar"/>
    </HBox>
</VBox>
